<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

<android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:text="Homens:"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="24sp"
            android:layout_marginStart="48dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="75dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <TextView
            android:text="Mulheres:"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:id="@+id/textView2"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="50dp"
            android:layout_marginStart="44dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="44dp"/>
    <TextView
            android:text="CrianÃ§as:"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="24sp"
            android:layout_marginStart="45dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="45dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <Button
            android:text="Calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_cal" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp" android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <EditText
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/editTextHomen"
            app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="5dp" android:layout_marginLeft="5dp" android:layout_marginTop="75dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <EditText
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/editTextMulher"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginLeft="5dp" android:layout_marginStart="5dp" android:layout_marginTop="37dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextHomen"/>
    <EditText
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/editTextCrianca"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextMulher"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="146dp" app:srcCompat="@drawable/churascometrotop"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="127dp" app:srcCompat="@drawable/fundobasebaixo"
            android:id="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/button_cal" android:layout_marginTop="90dp"
            android:scaleType="centerCrop"/>
</android.support.constraint.ConstraintLayout>
        </ScrollView>